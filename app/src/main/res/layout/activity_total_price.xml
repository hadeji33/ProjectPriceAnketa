<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:background="@color/main_buttons">

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-58dp"
            android:background="@color/light_pirple">

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="-5dp"
            android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="Общая стоимость"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/cmsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Расходы на CMS" />

            <TextView
                android:id="@+id/design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Разработка дизайна" />

            <TextView
                android:id="@+id/programming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Программирование шаблона" />

            <TextView
                android:id="@+id/filling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Наполнение" />

            <TextView
                android:id="@+id/mobileApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мобильное приложение" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>


